extends layout

block content
    span.hide #{id}
    .controls
      input(type='hidden', id='NameofPerson', value='#{id}')
    .site-wrapper
      .menu
        a(href="/")
          img.img-responsive.center-block.logo-sm(src="/img/bunkr_logo_color.png", alt="MyBuddy", width="100px")
      .chat-container
        .chat-left
          h3.empty.italic Get to know your Bunkr buddy before commiting to your booking
          ol#content.chat
          input#field.textarea(type='text', placeholder='Type here!')
          #send.send.btn-round
            span.glyphicon.glyphicon-send(aria-hidden="true")
        .chat-right.hide
          .sidebar
           .map
            img(src="/img/map.png" width="100%" height="100%")
           .info
            h3.hotel-name.voffset5 Sheraton fdsaf f dsf fasf sdf fdsf sadf sdfsda fsdaf sdfsda fsd
            h3.price $99.60
            .save
              img(src="img/save.png" width="50px")
            button.btn.btn-success.btn-lg.voffset5(type="button" aria-label="Left Align")
              span Confirm Booking
          script(src='/js/chat.js')
          script(src='/socket.io/socket.io.js')
